<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat">
        <item name="android:typeface">sans</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.NoActionBar">
        <item name="android:typeface">sans</item>
    </style>

    <style name="ForTenButton">
        <item name="android:background">@drawable/btn_forten_bg</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/font_medium</item>
    </style>

    <style name="ForTenTextBox">
        <item name="android:paddingLeft">@dimen/margin_medium</item>
        <item name="android:paddingRight">@dimen/margin_medium</item>
        <item name="android:background">@drawable/rectangle_gray_lighter</item>
        <item name="android:textColor">@color/gray_darker</item>
        <item name="android:textColorHint">@color/gray_light</item>
        <item name="android:textSize">@dimen/font_medium</item>
    </style>

</resources>
